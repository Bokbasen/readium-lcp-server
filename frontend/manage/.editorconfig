# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# 4 spaces indentation
[*.{ts,scss,css}]
indent_style = space
indent_size = 4

# 2 spaces indentation
[*.{html}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

