{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./js",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
        "app/**/*"
    ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts"
  ]
}
